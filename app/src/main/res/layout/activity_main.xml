<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:background="@drawable/gradientbackground"
>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="80dp"
            android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:layout_marginBottom="30dp"
            android:id="@+id/ButtonLayout" android:hapticFeedbackEnabled="false">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/SumsLayout"
                app:layout_constraintTop_toTopOf="@id/ButtonLayout"
                app:layout_constraintBottom_toBottomOf="@id/ButtonLayout"
                app:layout_constraintLeft_toLeftOf="@id/ButtonLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toRightOf="@id/ButtonLayout" android:layout_marginStart="10dp">
            <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/iignitehd"
                    android:id="@+id/IgniteButton"
                    tools:ignore="ContentDescription"
                    android:padding="0dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:contextClickable="false" android:layout_marginStart="50dp"/>
            <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/flash"
                    android:adjustViewBounds="true"
                    android:id="@+id/FlashButton"
                    tools:ignore="ContentDescription"
                    android:layout_marginEnd="10dp"
                    android:padding="0dp" android:layout_marginStart="50dp" android:layout_marginTop="50dp"/>
            <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/telepoort"
                    android:adjustViewBounds="true"
                    android:id="@+id/TeleButton"
                    tools:ignore="ContentDescription"
                    android:layout_marginEnd="10dp"
                    android:padding="0dp" android:layout_marginStart="50dp" android:layout_marginTop="50dp"/>
            <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/hheal"
                    android:adjustViewBounds="true"
                    android:id="@+id/HealButton"
                    tools:ignore="ContentDescription"
                    android:layout_marginEnd="10dp"
                    android:padding="0dp" android:layout_marginStart="50dp" android:layout_marginTop="50dp"/>
            <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ghoost"
                    android:adjustViewBounds="true"
                    android:id="@+id/GhostButton"
                    tools:ignore="ContentDescription"
                    android:layout_marginEnd="10dp"
                    android:padding="0dp" android:layout_marginStart="50dp" android:layout_marginTop="50dp"/>


        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintLeft_toLeftOf="@id/ButtonLayout"
                app:layout_constraintTop_toTopOf="@id/ButtonLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ButtonLayout" android:layout_marginEnd="70dp">
            <TextView
                    android:text="@string/ready"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content" android:id="@+id/textView0" android:layout_marginStart="150dp"
                    android:fontFamily="sans-serif-light" android:textSize="25sp" android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            <TextView
                    android:text="@string/ready"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_marginStart="150dp"
                    android:fontFamily="sans-serif-light" android:textSize="25sp" android:layout_marginTop="50dp"
                    android:textColor="@android:color/white"/>
            <TextView
                    android:text="@string/ready"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginStart="150dp"
                    android:fontFamily="sans-serif-light" android:textSize="25sp" android:layout_marginTop="50dp"
                    android:textColor="@android:color/white"/>
            <TextView
                    android:text="@string/ready"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_marginStart="150dp"
                    android:fontFamily="sans-serif-light" android:textSize="25sp" android:layout_marginTop="50dp"
                    android:textColor="@android:color/white"/>
            <TextView
                    android:text="@string/ready"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_marginStart="150dp"
                    android:fontFamily="sans-serif-light" android:textSize="25sp" android:layout_marginTop="50dp"
                    android:textColor="@android:color/white"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>